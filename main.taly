use "std-stdio"

extern fn printf(msg: c_string)

class Person
    var name: c_string
    var age: c_int

    new create(name: c_string, age: c_int) =>
        self.name = name
        self.age = age

    fn sayHello() => printf("Hello\n")

# main function
fn main() =>
    const person: Person = Person.create("John", 12)